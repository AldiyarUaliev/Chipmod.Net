@using System.Linq.Expressions
@implements ISwInputParams


<CascadingValue Value="@this">
    @ChildContent
</CascadingValue>


@code {

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    public string Id { get; set; }

    public string Label { get; set; }

    [Parameter]
    public bool? FormControl { get; set; }

    [Parameter]
    public bool? ShowValidationMessage { get; set; }

    [Parameter]
    public string DivClass { get; set; }

    [Parameter]
    public string LabelClass { get; set; }

    [Parameter]
    public string CssClass { get; set; }

    [Parameter]
    public string ValidationClass { get; set; }

    [Parameter]
    public Expression<Func<string>> ValidationFor { get; set; }


    [CascadingParameter]
    public ISwInputParams OtherCascadingParams { get; set; }

    protected override void OnInitialized()
    {
        FormControl ??= OtherCascadingParams?.FormControl;
        ShowValidationMessage ??= OtherCascadingParams?.ShowValidationMessage;
        DivClass ??= OtherCascadingParams?.DivClass;
        LabelClass ??= OtherCascadingParams?.LabelClass;
        CssClass ??= OtherCascadingParams?.CssClass;
        ValidationClass ??= OtherCascadingParams?.ValidationClass;
        ValidationFor ??= OtherCascadingParams?.ValidationFor;
    }

}
